  }

  .footnote-preview.is-visible {
    opacity: 1;
    transform: translateY(0) scale(1);
    pointer-events: auto;
  }

  .footnote-preview-inner p {
    margin: 0;
  }

  .footnote-preview-inner a {
    text-decoration: none;
  }

  @media (prefers-reduced-motion: reduce) {
    .footnote-preview {
      transition: none;
    }
  }
</style>
