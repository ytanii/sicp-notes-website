<div class="gradient-mask">
  <slot />
</div>

<script>
  let mask: HTMLElement | null = null
  let ticking = false

  function updateMask() {
    if (!mask) {
      mask = document.querySelector('.gradient-mask') as HTMLElement
    }
    if (!mask) return

    const threshold = 64
    const scrollY = window.scrollY

    if (scrollY >= threshold) {
      mask.style.opacity = '1'
    } else {
      mask.style.opacity = '0'
    }
  }

  function onScroll() {
    if (ticking) return
    ticking = true
    requestAnimationFrame(() => {
      updateMask()
      ticking = false
    })
  }

  function initGradientMask() {
    mask = document.querySelector('.gradient-mask') as HTMLElement
    updateMask()
  }

  // Use only astro:page-load as it fires on initial load and navigation
  document.addEventListener('astro:page-load', initGradientMask)
  window.addEventListener('scroll', onScroll, { passive: true })
</script>

