---
import IndexLayout from '@/layouts/IndexLayout.astro'
import About from '@/components/widgets/About.astro'
import { themeConfig } from '@/config'
import { getCollection } from 'astro:content'

const allNotes = await getCollection('notes')

// Separate chapters and sections
const chapters = allNotes
  .filter((note) => note.data.chapter && !note.data.section)
  .sort((a, b) => (a.data.chapter || 0) - (b.data.chapter || 0))

const sections = allNotes
  .filter((note) => note.data.chapter && note.data.section)
  .sort((a, b) => {
    if (a.data.chapter !== b.data.chapter) {
      return (a.data.chapter || 0) - (b.data.chapter || 0)
    }
    return (a.data.section || 0) - (b.data.section || 0)
  })

// Group sections by chapter
const sectionsByChapter = sections.reduce(
  (acc, section) => {
    const chapterNum = section.data.chapter || 0
    if (!acc[chapterNum]) acc[chapterNum] = []
    acc[chapterNum].push(section)
    return acc
  },
  {} as Record<number, typeof sections>
)
---

<IndexLayout title={themeConfig.site.title} description={themeConfig.site.description}>
  <About />
  <main>
    <ul class="chapter-list">
      {
        chapters.map((chapter) => {
          const chapterSections = sectionsByChapter[chapter.data.chapter || 0] || []
          return (
            <li class="chapter-item">
              <details open>
                <summary>
                  <a href={`/${chapter.id.replace(/\/index$/, '').replace(/\.mdx?$/, '')}/`} class="chapter-link">
                    <span class="chapter-number">{chapter.data.chapter}</span>
                    <span class="chapter-title">{chapter.data.title}</span>
                  </a>
                </summary>
                {chapterSections.length > 0 && (
                  <div class="section-list">
                    <div>
                      <ul>
                        {chapterSections.map((section) => (
                          <li class="section-item">
                            <a href={`/${section.id.replace(/\.mdx?$/, '')}/`}>
                              <span class="section-number">
                                {chapter.data.chapter}.{section.data.section}
                              </span>
                              <span class="section-title">{section.data.title}</span>
                            </a>
                          </li>
                        ))}
                      </ul>
                    </div>
                  </div>
                )}
              </details>
            </li>
          )
        })
      }
    </ul>
  </main>
</IndexLayout>

<style>
  .chapter-list {
    padding: 0;
    margin: 0;
    list-style-type: none;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .chapter-item {
    border-bottom: 1px solid var(--border);
  }

  .chapter-item:last-child {
    border-bottom: none;
  }

  details {
    cursor: pointer;
  }

  summary {
    list-style: none;
    padding: 1rem 0;
    user-select: none;
    position: relative;
  }

  summary::-webkit-details-marker,
  summary::marker {
    display: none;
  }

  /* Minimalist expand indicator - subtle line */
  summary::after {
    content: '';
    position: absolute;
    right: 0;
    top: 50%;
    transform: translateY(-50%) rotate(0deg);
    width: 1rem;
    height: 1.5px;
    background-color: var(--text-secondary);
    opacity: 0.8;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  details[open] > summary::after {
    transform: translateY(-50%) rotate(90deg);
    opacity: 0.6;
  }

  /* Hover effect on summary */
  @media (hover: hover) and (pointer: fine) {
    summary:hover::after {
      opacity: 1;
      width: 1.25rem;
    }
  }

  .chapter-link {
    color: var(--text-primary);
    text-decoration: none;
    display: inline-flex;
    align-items: baseline;
    gap: 1rem;
    transition: color 0.2s ease-out;
  }

  .chapter-number {
    font-weight: 600;
    color: var(--text-secondary);
    font-variant-numeric: tabular-nums;
    min-width: 1.5rem;
    font-size: 0.95em;
    opacity: 0.75;
  }

  .chapter-title {
    font-weight: 500;
  }

  /* Smooth collapse/expand animation */
  .section-list {
    padding: 0;
    margin: 0;
    list-style-type: none;
    display: grid;
    grid-template-rows: 0fr;
    transition:
      grid-template-rows 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      margin 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
  }

  details[open] .section-list {
    grid-template-rows: 1fr;
    margin: 0.25rem 0 1rem 0;
    opacity: 1;
  }

  .section-list > div {
    overflow: hidden;
  }

  .section-list ul {
    padding: 0;
    margin: 0;
    list-style-type: none;
  }

  .section-item {
    padding-left: 2.5rem;
  }

  .section-item a {
    color: var(--text-primary);
    text-decoration: none;
    display: flex;
    align-items: baseline;
    gap: 1rem;
    padding: 0.5rem 0;
    transition: color 0.2s ease-out;
  }

  .section-number {
    color: var(--text-tertiary);
    font-variant-numeric: tabular-nums;
    min-width: 2rem;
    font-size: 0.875em;
    opacity: 0.6;
  }

  .section-title {
    flex: 1;
    font-weight: 400;
  }

  @media (hover: hover) and (pointer: fine) {
    .chapter-link:hover {
      color: var(--text-secondary);
    }

    .section-item a:hover {
      color: var(--text-secondary);
    }

    .section-item a:hover .section-number {
      opacity: 1;
    }
  }
</style>
